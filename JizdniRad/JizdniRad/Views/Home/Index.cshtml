@model List<Line>


<div class="container">
    @for (int i = 0; i < Model.Count; i++)
    {

        <div class="card mb-1">

            <div class="card-header">@Model[i].Name</div>
            <div class="card-body">
                
                Směr: @this.ViewBag.LastStops[i].Name
            </div>
            <div class="card-footer">
                @if (@Model[i].FirstStopID!=null)
                {
                    <a asp-controller="Line" asp-action="Detail" asp-route-id="@Model[i].ID" class="btn btn-primary">Detail</a>
                }
                <a asp-controller="Administration" asp-action="Edit" asp-route-id="@Model[i].ID" class="btn btn-secondary">Upravit</a>
            </div>
        </div>
    }

    <div class="row">
        <a asp-action="ListStops" asp-controller="Administration" class="btn btn-primary"> Upravit stanice</a>
    </div>
